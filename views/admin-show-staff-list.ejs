<!--**********************************
            Content body start
***********************************-->
<style>
  .col-3 img {
    width: 100%;
    height: 15vh;
    object-fit: cover;
  }
</style>
<div class="content-body pt-3">
  <!-- row -->
  <div class="container-fluid">
    <div class="row">
      <div class="col-lg-12">
        <div class="card">
          <div class="card-body">
            <div class="table-responsive">
              <table class="table table-xs mb-0">
                <thead>
                  <tr>
                    <th>No</th>
                    <th>NAME</th>
                    <th>ADDRESS</th>
                    <th>PHONE NUMBER</th>
                    <th>STATUS</th>
                  </tr>
                </thead>
                <% if(shippers != '') { %>
                <tbody>
                  <% shippers.forEach(function(shipper, index) {%>
                  <tr>
                    <td>
                      <span><%= index + parseInt(1) %></span>
                    </td>
                    <td>
                      <span><%= shipper.name %></span>
                    </td>
                    <td>
                      <span><%= shipper.address %></span>
                    </td>
                    <td><%= shipper.tel %></td>

                    <td>
                      <i class="text-success mr-2"> <%= shipper.status %></i>
                    </td>
                  </tr>
                  <% }) %>
                </tbody>
                <% } %>
              </table>
            </div>
          </div>
          <a href="/admin-add-staff" class="btn btn-primary text-center"
            >Add Staff</a
          >
        </div>
      </div>
    </div>
  </div>
</div>
<!-- #/ container -->
<!--**********************************
                  Content body end
      ***********************************-->
