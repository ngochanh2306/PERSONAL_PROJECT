<div class="content-body pt-3">
  <!-- row -->
  <div class="container-fluid" style="margin-top: 5%">
    <div class="row justify-content-center">
      <div class="col-md-12">
        <div class="card">
          <div class="card-body">
            <div class="row">
              <% if (infoLoginObj != '') { %>
              <div class="col-12 alert alert-success alert-dismissible">
                <a
                  href="#"
                  class="close"
                  data-dismiss="alert"
                  aria-label="close"
                  >&times;</a
                >
                <h3><%= infoLoginObj %></h3>
              </div>
              <% } %> <% if (infoObj != '') { %>
              <div class="col-12 alert alert-success alert-dismissible">
                <a
                  href="#"
                  class="close"
                  data-dismiss="alert"
                  aria-label="close"
                  >&times;</a
                >
                <h3><%= infoObj %></h3>
              </div>
              <% } %> <% if (infoErrorsObj != '') { %>
              <div class="col-12 alert alert-danger alert-dismissible">
                <a
                  href="#"
                  class="close"
                  data-dismiss="alert"
                  aria-label="close"
                  >&times;</a
                >
                <h3><%= infoErrorsObj %></h3>
              </div>
              <% } %>
            </div>
            <div class="row rounded">
              <div
                class="col-md-5 p-4"
                style="background-color: rgb(255, 237, 136)"
              >
                <div class="row justify-content-center text-center">
                  <div class="col-12">
                    <H2 class="text-warning"><b>Tên: <%= data.name%></b></H2>
                  </div>
                  <div class="col-12">
                    <H3 class="ten">Địa chỉ: <%= data.address %></H3>
                  </div>
                  <div class="col-12">
                    <H3 class="ten">Số điện thoại: <%= data.tel %></H3>
                  </div>
                  <div class="col-12">
                    <H3 class="ten">Giới tính: <%= data.gender %></H3>
                  </div>
                </div>
                <!-- Dưới cái dòng này chỗ này -->

                <div class="row">
                  <div class="col-md-8 text-center">
                    <a class="btn btn-danger" href="/client"
                      ><h3>Mua sắm ngay bây giờ!!!</h3></a
                    >
                  </div>
                  <div class="col-md-4 text-center">
                    <a class="btn btn-primary" href="/login"
                      ><h3>Đăng xuất</h3></a
                    >
                  </div>
                </div>
              </div>
              <div
                class="col-md-7 p-4"
                style="background-color: rgb(255, 237, 136)"
              >
                <h3 class="text-center">Lịch sử hóa đơn</h3>
                <table
                  class="table table-striped table-bordered border-primary"
                >
                  <tr>
                    <th style="width: 10%"><h4>STT</h4></th>
                    <th style="width: 50%"><h4>Mã hóa đơn</h4></th>
                    <th style="width: 30%"><h4>Tổng cộng</h4></th>
                    <th style="width: 10%"><h4>Xem chi tiết</h4></th>
                  </tr>
                  <%if(invoices != null){ for(let i in invoices ){ %> <%
                  if(invoices[i].status == 4){ %>
                  <tr class="text-success">
                    <td><h4><%= parseInt(i) + 1 %></h4></td>
                    <td><h4><%= invoices[i]._id %></h4></td>
                    <td><h4><%= invoices[i].value %></h4></td>
                    <td>
                      <h4>
                        <a href="/invoice/<%= invoices[i]._id %>">xem</a>
                      </h4>
                    </td>
                  </tr>
                  <% } else if (invoices[i].status == 3){ %>
                  <tr class="text-warning">
                    <td><h4><%= parseInt(i) + 1 %></h4></td>
                    <td><h4><%= invoices[i]._id %></h4></td>
                    <td><h4><%= invoices[i].value %></h4></td>
                    <td>
                      <h4>
                        <a href="/invoice/<%= invoices[i]._id %>">xem</a>
                      </h4>
                    </td>
                  </tr>
                  <% } else if (invoices[i].status == 2){ %>
                  <tr class="text-info">
                    <td><h4><%= parseInt(i) + 1 %></h4></td>
                    <td><h4><%= invoices[i]._id %></h4></td>
                    <td><h4><%= invoices[i].value %></h4></td>
                    <td>
                      <h4>
                        <a href="/invoice/<%= invoices[i]._id %>">xem</a>
                      </h4>
                    </td>
                  </tr>
                  <% } else if (invoices[i].status == 1){ %>
                  <tr class="text-black">
                    <td><h4><%= parseInt(i) + 1 %></h4></td>
                    <td><h4><%= invoices[i]._id %></h4></td>
                    <td><h4><%= invoices[i].value %></h4></td>
                    <td>
                      <h4>
                        <a href="/invoice/<%= invoices[i]._id %>">xem</a>
                      </h4>
                    </td>
                  </tr>
                  <% } else { %>
                  <tr class="text-danger" style="text-decoration: line-through">
                    <td><h4><%= parseInt(i) + 1 %></h4></td>
                    <td><h4><%= invoices[i]._id %></h4></td>
                    <td><h4><%= invoices[i].value %></h4></td>
                    <td>
                      <h4>
                        <a
                          href="/invoice/<%= invoices[i]._id %>"
                          style="cursor: not-allowed; pointer-events: none"
                          >view</a
                        >
                      </h4>
                    </td>
                  </tr>
                  <% } %> <% }} else { %>
                  <H2>status</H2>
                  <% } %>
                </table>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
