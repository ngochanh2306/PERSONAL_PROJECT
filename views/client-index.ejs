<div class="container-scroller">
  <!-- slider quảng cáo -->
  <section class="home" id="home">
    <div class="image" data-aos="fade-down">
      <img
        src="https://cdn.vox-cdn.com/thumbor/8hZcUxUOBb4GV1JiDsz1USpT29w=/385x352:1561x1061/1200x800/filters:focal(831x620:1137x926)/cdn.vox-cdn.com/uploads/chorus_image/image/70609268/Burger_King_Plant_based_Double_Cheeezeburger.0.jpg"
        alt=""
      />
    </div>
    <div class="content" data-aos="fade-up">
      <h3
        class="text-warning text-center font-weight-bold"
        style="font-family: 'Courier New', Courier, monospace"
      >
        Thực đơn ngon cho bạn
      </h3>
      <p>
        Tự tin luôn mang đến cho bạn nhiều món ăn ngon với mang hương vị từ khắp
        nơi trên thế giới, có mặt trên khắp 35 tỉnh thành giúp bữa ăn của bạn
        phong phú hơn. <br />
        Thao tác nhanh gọn, giao hàng nhanh, cùng khám phá ngay!
      </p>
      <a href="/all" class="btn btn-block btn-warning btn-lg text-white"
        ><h2 class="text-white">Khám phá ngay</h2></a
      >
    </div>
  </section>
  <!-- home section ends -->
  <hr />
  <!-- foods section starts  -->
  <section class="packages" id="foods">
    <a href="/foods" title="Click fore more foods"
      ><h1 class="heading text-warning font-weight-bold">
        <span>THỨC ĂN</span>
      </h1></a
    >
    <div class="box-container">
      <div class="row">
        <% if ( foods != '') { %> <% foods.forEach(function(food, index){ %>
        <a href="/client-product/<%= food._id %>">
          <div class="col-md-3 category__link">
            <div class="box" data-aos="fade-up">
              <div class="image">
                <img src=" <%= food.image_url %> " alt="<%= food.name %>" />
                <h3><i class="fas fa-utensils"></i><%= food.name %></h3>
              </div>
              <div class="content">
                <div class="price"><%= food.price %></div>
                <p><%= food.description %></p>
                <form action="" id="addf" method="POST">
                  <a
                    onclick="submitf('<%= food._id %>')"
                    class="btn btn-block btn-warning btn-lg text-white"
                    ><h4>Thêm vào giỏ hàng</h4></a
                  >
                </form>
              </div>
            </div>
          </div>
        </a>
        <% }) %> <% } %>
      </div>
    </div>
  </section>
  <!-- foods section ends -->
  <hr />
  <!-- drinks section starts  -->
  <section class="packages" id="drinks">
    <a href="/drinks" title="Click fore more drinks"
      ><h1 class="heading text-warning font-weight-bold">
        <span>THỨC UỐNG</span>
      </h1></a
    >
    <div class="box-container">
      <div class="row">
        <% if ( drinks != '') { %> <% drinks.forEach(function(drink, index){ %>
        <a href="/client-product/<%= drink._id %>"
          ><div class="col-md-3 category__link">
            <div class="box" data-aos="fade-up">
              <div class="image">
                <img src=" <%= drink.image_url %> " alt="<%= drink.name %> " />
                <h3><i class="fas fa-utensils"></i><%= drink.name %></h3>
              </div>
              <div class="content">
                <div class="price"><%= drink.price %></div>
                <p><%= drink.description %></p>
                <form action="" id="addd" method="POST">
                  <a
                    onclick="submitd('<%= drink._id %>')"
                    class="btn btn-block btn-warning btn-lg text-white"
                    ><h4>Thêm vào giỏ hàng</h4></a
                  >
                </form>
              </div>
            </div>
          </div></a
        >
        <% }) %> <% } %>
      </div>
    </div>
  </section>
  <!-- drinks section ends -->
  <!-- page-body-wrapper ends -->
</div>
<script>
  function submitf(id) {
    url = '/add-cart/' + id;
    document.forms['addf'].setAttribute('action', url);
    document.getElementById('addf').submit();
  }
  function submitd(id) {
    url = '/add-cart/' + id;
    document.forms['addd'].setAttribute('action', url);
    document.getElementById('addd').submit();
  }
</script>
